<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="renderer" content="webkit">
    <title>ideaology</title>
    <link rel="stylesheet" href="/css/index.css" media="screen" title="no title" charset="utf-8">
</head>

<body>
    {{> nav current='0' menu=menu}}
    <div class="wrap">
		<div class="wrap-top">
			{{#with index}}
			<div class="slider" id="slider" style="overflow:hidden;">
				{{#each slider}}
	            <div>
	                <p class="title">{{title}}</p>
	                <p>{{{subtitle}}}</p>
	            </div>
	        	{{/each}}
			</div>
	        <div class="banner"></div>
			{{#with intro}}
		        <div class="content">
		            <a href="/contact" class="consume-btn">{{btn}}</a>
		            <div class="intro">
		                <p class="p2">{{title}}</p>
		                <p>{{subtitle}}</p>
		            </div>
		            <div class="list">
						{{#each list}}
		                <div class="item">
		                    <p class="title">{{title}}</p>
		                    <p>{{text}}</p>
		                </div>
		                {{/each}}
		            </div>
		        </div>
			</div>
		<div class="wrap-bottom">
		{{/with}}
	        <div class="content1">
	            <ul>
	                <li style="background-color: #FFD102;color:#000;">
	                    <img src="/images/Page 1.svg" alt="">
	                    <p class="title">{{content1.0.title}}</p>
	                    <p>{{content1.0.text}}</p>
	                </li>
	                <li style="background-color: #F5F5F5;">
	                    <img src="/images/Page 2.svg" alt="">
						<p class="title">{{content1.1.title}}</p>
	                    <p>{{content1.1.text}}</p>
	                </li>
	                <li style="background-color: #25CE9E;">
	                    <img src="/images/Page 3.svg" alt="">
						<p class="title">{{content1.2.title}}</p>
	                    <p>{{content1.2.text}}</p>
	                </li>
	                <li style="background-color: #4088DA;color:#fff;">
	                    <img src="/images/Page 4.svg" alt="">
						<p class="title">{{content1.3.title}}</p>
	                    <p>{{{content1.3.text}}}</p>
	                </li>
	            </ul>
	        </div>
	        <div class="display">
	            <h1>{{display.title}}</h1>
	            <ul class="content" id="video">
					{{#each cmsData}}
					<li data-video={{story_video_link}} data-title={{story_title}}>
	                    <p class="title">{{story_name}}</p>
	                    <p class="subtitle">{{story_title}}</p>
	                    <p>{{story_context}}</p>
						<img src="http://idea-admin.ideaology.cn/file/{{story_logo}}" alt="">
	                </li>
					{{/each}}
	            </ul>
	        </div>
	        <div class="team">
				{{#with team}}
	            <h1>{{title}}</h1>
	            <p>{{{subtitle}}}</p>
	            <ul class="team-member">
					{{#each members}}
						{{#if (equal @index 3)}}
							<li></li>
						{{else}}
							<li>
								<div class="avator avator{{#if (equal @index 1)}}2{{else if (equal @index 2)}}3{{else}}1{{/if}}"></div>
								<div class="info">
									<p class="name">{{name}}</p>
									<p class="title">{{title}}</p>
									<p>{{text}}</p>
								</div>
							</li>
						{{/if}}
					{{/each}}
	            </ul>
				{{/with}}
			</div>
			{{/with}}
		</div>
	</div>
    {{> footer}}
	<div id="modal">
		<div class="modal-hd">
	        <h3 class="title"></h3>
	        <a class="close-btn" href="javascript: void(0);">X</a>
	    </div>
		<div class="modal-bd">
			<iframe src="" width="750" height="422" frameborder="0" allowfullscreen id="video_iframe"></iframe>
		</div>
	</div>
</body>
<script src="/vendor/jquery.min.js"></script>
<script src="/vendor/jquery.slides.min.js"></script>
<script src="/js/index.js"></script>
</html>
